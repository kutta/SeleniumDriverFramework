package com.comverse.css.csr.epi;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class EPI0020_List_employees_of_a_level extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testEPI0020_List_employees_of_a_level() throws Exception {
        try {
            Prep csrApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Wait waiting = new Wait(selenium);

            app = csrApplication.launchCSR();
            version = csrApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = csrApplication.getBrowserAgent();
            long ts = csrApplication.generateTimeStamp();

            myUser.loginSeniorAcctManager();
            selenium.click("//a[@id='mnu_TELCO']");
            waiting.forTextPresent("View Hierarchy");

            myUser.createLevelWithLevelType("EPM0020" + ts);
            selenium.click("link=" + "EPM0020" + ts);

            waiting.forTextPresent("All rights reserved");
            selenium.click("//a[@id='smnu_ADD_MEMBER']");

            waiting.forTextPresent("New Member - Legal Address");
            selenium.type("//input[@id='first_name']", "FN" + ts);
            selenium.type("//input[@id='last_name']", "LN" + ts);
            selenium.click("//input[@id='sex_male']");
            selenium.type("//input[@id='address_line_1']", "AD1autoemployee1");
            selenium.type("//input[@id='address_line_2']", "AD2autoemployee1");
            selenium.type("//input[@id='address_line_3']", "AD3autoemployee1");
            selenium.type("//input[@id='address_line_4']", "AD4autoemployee1");
            selenium.type("//input[@id='home_zip']", "75000");
            selenium.click("//input[@value='Continue']");

            waiting.forTextPresent("Login");
            selenium.type("//input[@id='login']", "EMP" + ts);
            selenium.click("//input[@value='Continue']");
            waiting.forTextPresent("Add Member - Confirmation");

            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Member register has been recorded");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("View Hierarchy");

            selenium.click("link=" + "EPM0020" + ts);
            waiting.forTextPresent("All rights reserved");
            assertTrue(selenium.isTextPresent("FN" + ts + " LN" + ts));
            selenium.click("link=" + "FN" + ts + " LN" + ts);
            waiting.forTextPresent("All rights reserved");
            assertTrue(selenium.isTextPresent("EPM0020" + ts));
            assertTrue(selenium.isTextPresent("First Name: FN" + ts));
            assertTrue(selenium.isTextPresent("Last Name: LN" + ts));

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
