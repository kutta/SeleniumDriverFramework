package com.comverse.css.csr.rch;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.CSSSeleneseTestCase;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;
import com.comverse.css.pos.Nca;

public class RCH0040_View_recharge_history extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testRCH0040_View_recharge_history() throws Exception {
        try {
            Prep csrApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nca doNca = new Nca(selenium);
            Wait waiting = new Wait(selenium);
            long ts = csrApplication.generateTimeStamp();

            app = csrApplication.launchCSR();
            version = csrApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = csrApplication.getBrowserAgent();

            myUser.loginCSRUser();
            doNca.checkForExistingBasketAndDiscard();
            doNca.startNCA("New Pure Prepaid Residential Customer");
            doNca.enterIdentificationData(ts);
            doNca.modifyAccountDetails();
            doNca.reviewCustomerData();
            doNca.chooseOffer("Residential - Basic Prepaid");
            doNca.enterSubscriptionDetails(ts);
            doNca.selectOffersForYourSubscriber();
            doNca.configureOffers();
            String SIM = doNca.selectThreeInventory();
            doNca.checkMyBasketContent("Residential - Basic Prepaid");
            doNca.checkoutReview();
            doNca.checkoutConfirmation(app);
            doNca.waitForSubscriberCreated(SIM);

            selenium.click("viewBalances");
            waiting.forPageToLoad();

            assertEquals("View Balance", selenium.getTitle());
            selenium.click("link=Non voucher Recharge (free amount)");
            waiting.forPageToLoad();

            assertEquals("Non voucher recharge", selenium.getTitle());
            selenium.type("amount", "10");
            selenium.click("payment_type");
            selenium.click("//input[@value='Continue']");
            waiting.forPageToLoad();

            assertEquals("Non voucher recharge review", selenium.getTitle());
            selenium.click("//input[@value='Continue']");
            waiting.forPageToLoad();

            waiting.forTextPresent("Recharge Subscriber");
            assertEquals("Recharge Subscriber", selenium.getTitle());
            selenium.click("youcan_BACK_TO_BALANCE_VIEW");
            waiting.forPageToLoad();

            selenium.click("youcan_VIEW_RECHARGE_HISTORY");
            waiting.forPageToLoad();

            assertEquals("View recharge history", selenium.getTitle());
            int retries = 0;
            while (retries < 60) {
                System.out.println("Waiting for recharge [" + retries + "] of 60");
                selenium.click("//input[@value='Search' and @type='submit']");
                waiting.forPageToLoad();
                if (selenium.isTextPresent("Recharges")) {
                    selenium.isTextPresent("CSR Portal (non-voucher)");
                    System.out.println("Recharge found");
                    break;
                }
                Thread.sleep(5000);
                retries++;
            }
            selenium.click("css=input.back");
            waiting.forPageToLoad();

            assertEquals("View Balance", selenium.getTitle());

            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}