package com.comverse.css.b2c.accs;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2c.Navigation;
import com.comverse.css.common.CSSSeleneseTestCase;
import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class ACCS0140_Edit_Login_Information extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {

        String htmlFileName = this.getClass().getSimpleName().toString();

        super.setUp(htmlFileName);

    }

    public void testACCS0140_Edit_Login_Information() throws Exception {
        try {
            Prep b2cApplication = new Prep(selenium);
            Wait waiting = new Wait(selenium);
            User myUser = new User(selenium);
            Navigation Navigate = new Navigation(selenium);

            long unique_ID = b2cApplication.generateTimeStamp();
            String MemberName = "accs0150" + unique_ID;

            app = b2cApplication.launchB2C();
            version = b2cApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2cApplication.getBrowserAgent();

            myUser.loginSeniorAcctManager();

            myUser.createAdminMember(MemberName);

            Navigate.gotoSearchMember();
            selenium.type("p-L4:1013-L3:1640", MemberName);
            selenium.click("//form[@id='form_SEARCH_MEMBERS_RESULT_1']/fieldset/input[7]");
            waiting.forPageToLoad();
            selenium.click("lnk_MEMBER_0");
            waiting.forPageToLoad();

            selenium.click("smnu_LOGIN");
            waiting.forPageToLoad();
            selenium.click("youcan_CHANGE_ROLES");
            waiting.forPageToLoad();
            selenium.click("//input[@name='roles' and @value='L3:102']");
            assertTrue(selenium.isTextPresent("Please select the roles for login " + MemberName + " of member fn" + MemberName + " ln" + MemberName));
            assertTrue(selenium.isTextPresent("Change Roles"));
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();
            assertEquals("Previous Roles:", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr[1]/th"));
            assertEquals("Residential administrator", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr[1]/td"));

            assertEquals("New Roles:", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr[2]/th"));
            assertEquals("Residential subscriber", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr[2]/td"));

            selenium.click("//input[@value='Confirm']");
            waiting.forPageToLoad();
            selenium.click("smnu_ADDRESS");
            waiting.forPageToLoad();
            selenium.click("smnu_LOGIN");
            waiting.forPageToLoad();

            assertEquals("Current Roles:", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr/th"));
            assertEquals("Residential subscriber", selenium.getText("//*[@id='mainContents']/div[2]/div/table/tbody/tr/td "));


            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }

    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
