package com.comverse.css.b2c.cust;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2c.Navigation;
import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.PropertyHelper;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class CUST1250_Edit_Customer_Residential_Member_Legal_Contact extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = ""; private String result = "fail";

    @Before
    @Override
    public void setUp() {

        String htmlFileName = this.getClass().getSimpleName().toString();

        super.setUp(htmlFileName);

    }

    public void testCUST1250_Edit_Customer_Residential_Member_Legal_Contact() throws Exception {
        try {
            Prep b2cApplication = new Prep(selenium);
            //   Nca Nca = new Nca(selenium);
            Wait waiting = new Wait(selenium);
            User myUser = new User(selenium);
            Navigation Navigate = new Navigation(selenium);
            //   Components component = new Components(selenium);
            PropertyHelper propsHelper = new PropertyHelper();

            long unique_ID = b2cApplication.generateTimeStamp();
            String newcode = "a" + unique_ID;

            app = b2cApplication.launchB2C();
            version = b2cApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2cApplication.getBrowserAgent();

            String login = propsHelper.readLoginFromFile();
            String password = propsHelper.readPasswordFromFile();
            String lastname = propsHelper.readLastNameFromFile();
            lastname = lastname.substring(2);
            System.out.println(lastname);

            myUser.loginB2CUser(login, password);

            Navigate.gotoCustomerMemberContactInformation("fn" + lastname, "ln" + lastname);

            selenium.click("youcan_MODIFY_CONTACT");
            waiting.forTextPresent("Modify Contact Information");
            waiting.forTextPresent("Please enter the contact information.");

            selenium.click("sex_fem");
            selenium.type("address_line_1", newcode);
            selenium.type("address_line_2", newcode);
            selenium.type("address_line_3", newcode);
            selenium.type("address_line_4", newcode);
            selenium.type("home_zip", newcode);
            selenium.type("home_city", newcode);
            selenium.select("home_country", "label=France");
            selenium.type("email", "9@uuu9.com");
            selenium.type("home_phone", "10");
            selenium.type("fax", "11");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Modify Contact Information - Confirmation");
            waiting.forTextPresent("Are you sure you want to modify the contact information");

            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Request Submission");
            waiting.forTextPresent("The \"Modify Legal Contact\" has been submitted successfully.");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Contact Information");

            assertTrue(selenium.isTextPresent("Gender: Female"));
            assertTrue(selenium.isTextPresent("Address Line 1: " + newcode));
            assertTrue(selenium.isTextPresent("Address Line 2: " + newcode));
            assertTrue(selenium.isTextPresent("Address Line 3: " + newcode));
            assertTrue(selenium.isTextPresent("Address Line 4: " + newcode));
            assertTrue(selenium.isTextPresent("ZIP/Post Code: " + newcode));
            assertTrue(selenium.isTextPresent("City: " + newcode));
            assertTrue(selenium.isTextPresent("Country: France"));
            assertTrue(selenium.isTextPresent("Phone Number: 10"));
            assertTrue(selenium.isTextPresent("Fax Number: 11"));
            assertTrue(selenium.isTextPresent("Email Address: 9@uuu9.com"));

        result = "pass"; } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }

    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
