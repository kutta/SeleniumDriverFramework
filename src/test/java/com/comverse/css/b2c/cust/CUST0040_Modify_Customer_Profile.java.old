package com.comverse.css.b2c.cust;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2c.Components;
import com.comverse.css.b2c.Navigation;
import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class CUST0040_Modify_Customer_Profile extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = ""; private String result = "fail";

    @Before
    @Override
    public void setUp() {

        String htmlFileName = this.getClass().getSimpleName().toString();

        super.setUp(htmlFileName);

    }

    public void test() throws Exception {
        try {

            Prep b2cApplication = new Prep(selenium);
            Wait waiting = new Wait(selenium);
            User myUser = new User(selenium);
            Navigation Navigate = new Navigation(selenium);
            Components Components = new Components(selenium);

            String Unique_ID = "" + b2cApplication.generateTimeStamp();
            String CustomerName = "CUST0040" + Unique_ID;

            app = b2cApplication.launchB2C();
            version = b2cApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2cApplication.getBrowserAgent();

            Components.createPostPaidCustomer(CustomerName, app);

            myUser.logout();

            myUser.loginSeniorAcctManager();

            Navigate.gotoSearchCustomer();

            // find a customer and access UC Contact Information
            selenium.type("p-L1:3-L3:1470", "*" + CustomerName + "*");
            selenium.click("//form[@id='form_CUSTOMER_RESULTS_1']/fieldset[2]/input[8]");
            waiting.forPageToLoad();
            selenium.click("lnk_CUST_CONTEXT_0");
            Navigate.gotoCustomerInformationChangeProfile();


            waiting.forTextPresent("Customer Type Residential");
            waiting.forRegexpTextPresent("Approval Sequencing.*No");
            selenium.click("//input[@value='Modify']");
            waiting.forTextPresent("Modify Profile Information");
            waiting.forTextPresent("Please enter the following information about the customer");
            waiting.forTextPresent("Customer Profile");
            selenium.select("approval_sequencing_field", "label=Yes");
            selenium.click("okButton");
            waiting.forTextPresent("Confirm Modify Profile Information");
            waiting.forTextPresent("Approval Sequencing Yes");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Customer Profile");
            waiting.forTextPresent("The \"Modify Customer Profile\" has been submitted successfully.");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Approval Sequencing Yes");
        result = "pass"; } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
