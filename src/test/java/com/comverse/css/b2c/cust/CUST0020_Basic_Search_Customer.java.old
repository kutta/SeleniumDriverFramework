package com.comverse.css.b2c.cust;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2c.Components;
import com.comverse.css.b2c.Navigation;
import com.comverse.css.common.*;

public class CUST0020_Basic_Search_Customer extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {

        String htmlFileName = this.getClass().getSimpleName().toString();

        super.setUp(htmlFileName);

    }

    public void testCUST0020_Basic_Search_Customer() throws Exception {

        try {
            Prep b2cApplication = new Prep(selenium);
            Wait waiting = new Wait(selenium);
            User myUser = new User(selenium);
            Navigation Navigate = new Navigation(selenium);
            Components component = new Components(selenium);



            app = b2cApplication.launchB2C();
            version = b2cApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2cApplication.getBrowserAgent();


            PropertyHelper propsHelper = new PropertyHelper();

            String last_name = propsHelper.readLastNameFromFile();


            myUser.loginSeniorAcctManager();

            Navigate.gotoSearchCustomer();

            // by last name

            selenium.type("p-L1:3-L3:1470", last_name);
            selenium.click("//form[@id='form_CUSTOMER_RESULTS_1']/fieldset[2]/input[8]");
            waiting.forPageToLoad();
            waiting.forTextPresent("Search Customer");
            waiting.forTextPresent(last_name);
            waiting.forTextPresent("Residential");

            component.reset_search();

            selenium.type("p-L1:3-L3:1460", "ln*");
            selenium.type("p-L1:3-L3:1470", last_name);
            selenium.click("//form[@id='form_CUSTOMER_RESULTS_1']/fieldset[2]/input[8]");
            waiting.forPageToLoad();

            component.reset_search();

            // by combo exact last name and first name wildcard
            selenium.type("p-L1:3-L3:1460", "fn*" );
            selenium.type("p-L1:3-L3:1470", "*CUST*");
            selenium.click("//form[@id='form_CUSTOMER_RESULTS_1']/fieldset[2]/input[8]");
            waiting.forPageToLoad();

            component.reset_search();

            // find a customer and access UC Contact Information
            selenium.type("p-L4:1010-L3:1450", "1*");
            selenium.click("xpath=(//input[@value='Search'])[3]");
            waiting.forPageToLoad();
            selenium.click("lnk_CUST_CONTEXT_0");
            waiting.forPageToLoad();
            waiting.forTextPresent("Contact Information");

            selenium.goBack();
            waiting.forTextPresent("Search Customer");
            selenium.type("p-L4:1010-L3:1450", "0*");
            selenium.click("xpath=(//input[@value='Search'])[3]");
            waiting.forTextPresent("No matching customer found");

            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }

    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
