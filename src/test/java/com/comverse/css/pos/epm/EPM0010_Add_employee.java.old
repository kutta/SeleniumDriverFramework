package com.comverse.css.pos.epm;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.CSSSeleneseTestCase;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;
import com.comverse.css.pos.Nca;

public class EPM0010_Add_employee extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testEPM0010_Add_employee() throws Exception {
        try {
            Prep posApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Wait waiting = new Wait(selenium);
            Nca doNca = new Nca(selenium);
            String Password = "";
            String Username = "AutoEmployee" + posApplication.generateTimeStamp();

            app = posApplication.launchPOS();
            version = posApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = posApplication.getBrowserAgent();

            myUser.loginSeniorAcctManager();
            selenium.click("//a[@id='mnu_TELCO']");
            waiting.forTextPresent("View Hierarchy");
            selenium.click("//a[@id='smnu_ADD_MEMBER']");
            waiting.forTextPresent("New Member - Legal Address");
            selenium.type("//input[@id='first_name']", "FNautoemployee1");
            selenium.type("//input[@id='last_name']", "LNautoemployee1");
            selenium.click("//input[@id='sex_male']");
            selenium.type("//input[@id='address_line_1']", "AD1autoemployee");
            selenium.type("//input[@id='address_line_2']", "AD2autoemployee");
            selenium.type("//input[@id='address_line_3']", "AD3autoemployee");
            selenium.type("//input[@id='address_line_4']", "AD4autoemployee");
            selenium.type("//input[@id='home_zip']", "75000");
            selenium.click("//input[@value='Continue']");

            waiting.forTextPresent("Login");
            selenium.type("//input[@id='login']", Username);
            selenium.select("//select[@id='roles']", "label=Telco Administrator");
            selenium.click("//input[@value='Continue']");

            waiting.forTextPresent("Add Member - Confirmation");

            Password = doNca.GetPassword();

            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Add Member");
            waiting.forTextPresent("password");
            assertTrue(selenium.isTextPresent("Member register has been recorded"));
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("View Hierarchy");

            String levelname = myUser.createWeekLevel();
            selenium.click("link=Shape Telecom");

            waiting.forTextPresent("FNautoemployee1");
            selenium.click("link=FNautoemployee1 LNautoemployee1");
            waiting.forTextPresent("Contact Information");
            selenium.click("//a[@id='youcan_MOVE_MEMBER']");
            waiting.forTextPresent("Move Member");
            waiting.forElementPresent("id=lnk_LEVEL_" + myUser.IDLevel(levelname));
            selenium.click("id=lnk_LEVEL_" + myUser.IDLevel(levelname));
            waiting.forTextPresent("has been submitted successfully");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Contact Information");
            selenium.click("link=Shape Telecom");
            waiting.forTextPresent("View Hierarchy");
            waiting.forTextPresent(levelname);
            selenium.click("link=" + levelname);

            myUser.logout();

            selenium.type("//input[@id='login']", Username);
            selenium.type("//input[@id='password']", Password);
            selenium.click("//input[@name='LoginButton']");

            waiting.forTextPresent("You must change your password");
            selenium.type("//input[@id='password_old']", Password);
            selenium.type("//input[@id='password_new']", "emp1234");
            selenium.type("//input[@id='password_verify']", "emp1234");
            //selenium.type("//input[@id='secretAnswer']", "emp1234");
            selenium.click("//input[@value='Change']");
            waiting.forTextPresent("Welcome to Your Personalized Workspace");

            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
