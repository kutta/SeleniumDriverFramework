package com.comverse.css.pos.epm;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;
import com.comverse.css.pos.Nca;

public class EPM0060_Modify_employee_profile extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testEPM0060_Modify_employee_profile() throws Exception {
        try {
            Prep posApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Wait waiting = new Wait(selenium);
            Nca doNca = new Nca(selenium);

            app = posApplication.launchPOS();
            version = posApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = posApplication.getBrowserAgent();

            myUser.loginSeniorAcctManager();
            doNca.checkForExistingBasketAndDiscard();
            assertTrue(selenium.isTextPresent("Welcome to Your Personalized Workspace"));
            selenium.click("//a[@id='mnu_MANAGE_RETAILER']");
            waiting.forPageToLoad();
            assertEquals("Search Retailer", selenium.getTitle());

            selenium.type("//input[@id='p-L1:2-L3:1480']", "Dealer 1");
            selenium.click("//input[@value='Search']");
            waiting.forTextPresent("1 retailers found");
            selenium.click("link=Dealer 1");
            waiting.forTextPresent("View Hierarchy");

            selenium.click("//a[@id='smnu_PROFILE']");
            waiting.forTextPresent("Profile Information");
            selenium.click("//input[@id='modifyCustomer']");
            waiting.forTextPresent("Modify Profile Information");

            selenium.type("//input[@id='agreement_name_field']", "Nilu1");
            selenium.type("//input[@id='agreement_date_field']", "04/01/2011");
            selenium.select("//select[@id='timezone_field']", "label=Etc/GMT+11");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Modify Profile Information - Confirmation");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Request Submission");
            assertTrue(selenium.isTextPresent("has been submitted successfully"));
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Profile Information");

            assertTrue(selenium.isTextPresent("Nilu1"));
            assertTrue(selenium.isTextPresent("04/01/2011"));
            assertTrue(selenium.isTextPresent("Etc/GMT+11"));

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}