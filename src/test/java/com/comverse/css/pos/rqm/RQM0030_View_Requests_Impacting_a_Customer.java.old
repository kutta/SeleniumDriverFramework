package com.comverse.css.pos.rqm;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;
import com.comverse.css.pos.Navigation;
import com.comverse.css.pos.Nca;

public class RQM0030_View_Requests_Impacting_a_Customer extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testRQM0030_View_Requests_Impacting_a_Customer() throws Exception {
        try {
            Prep posApplication = new Prep(selenium);
            Prep b2cApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nca doNca = new Nca(selenium);
            Navigation doNav = new Navigation(selenium);
            Wait waiting = new Wait(selenium);
            long ts = posApplication.generateTimeStamp();

            app = posApplication.launchPOS();
            version = posApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = posApplication.getBrowserAgent();

            //NCA in POS
            myUser.loginTelcoUser();
            doNca.checkForExistingBasketAndDiscard();
            doNca.startNCA("New Convergent Residential Customer");
            doNca.enterIdentificationData(ts);
            doNca.modifyAccountDetails();
            doNca.reviewCustomerData();
            doNca.chooseOffer("Residential - Ultra Postpaid");
            doNca.enterSubscriptionDetails(ts);
            doNca.selectOffersForYourSubscriber();
            doNca.configureOffers();
            doNca.configureBalance("GPRS WAP-INTERNET_limit", "1024");
            String SIM = doNca.selectThreeInventory();
            doNca.checkMyBasketContent("Residential - Ultra Postpaid");
            doNca.checkoutReview();
            doNca.checkoutConfirmation(app);
            doNca.waitForSubscriberCreated(SIM);
            doNav.gotoAccountPage();
            String AccountNumber = doNav.getAccountNumber();
            myUser.logout();

            //Sign Up in B2C
            b2cApplication.launchB2C();
            selenium.click("lnk_SIGNUP");
            waiting.forPageToLoad();
            assertTrue(selenium.isTextPresent("Enter your customer number and your last name or your company name"));
            selenium.type("customer_reference", AccountNumber);
            selenium.type("customer_last_name", "AcctLN" + ts);
            selenium.click("//input[@value='Continue']");
            waiting.forPageToLoad();
            selenium.type("//div[@id='workspaceContainerNoMenu']/form/fieldset[2]/p[1]/input", String.valueOf(ts));
            selenium.type("//div[@id='workspaceContainerNoMenu']/form/fieldset[2]/p[2]/input", "0123456");
            selenium.type("confirm_password", "0123456");
            selenium.type("secret_answer", "0123456");
            selenium.click("//input[@value='Sign Me Up']");
            waiting.forPageToLoad();
            assertTrue(selenium.isTextPresent("The \"Sign Me Up\" has been submitted successfully."));

            //Add SO in B2C
            b2cApplication.launchB2C();
            myUser.loginB2CUser(String.valueOf(ts), "0123456");
            assertEquals("Welcome to Your Personalized Workspace", selenium.getTitle());
            selenium.click("mnu_ACCOUNTS");
            waiting.forPageToLoad();
            assertEquals("Subscriber detail", selenium.getTitle());
            selenium.click("youcan_SERVICE_ADD");
            waiting.forPageToLoad();
            doNca.selectOffersForYourSubscriber("2010 World Cup Soccer News");
            doNca.configureOffers();
            assertEquals("Add Supplementary Offers", selenium.getTitle());
            assertTrue(selenium.isTextPresent("The \"Add Supplementary Offer\" request has been submitted successfully."));
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();
            assertEquals("Subscriber detail", selenium.getTitle());
            myUser.logout();

            // Check REQ in POS
            app = posApplication.launchPOS();
            myUser.loginTelcoUser();
            doNca.checkForExistingBasketAndDiscard();
            doNca.waitForExistingAccountSynchronised(AccountNumber);
            selenium.click("firstYouCanviewCustomerRequestsMenu");
            waiting.forPageToLoad();
            assertEquals("Requests for Customer", selenium.getTitle());
            selenium.click("//input[@value='Search' and @type='submit']");
            waiting.forPageToLoad();
            bugId = "CBS00120067";
            assertTrue(selenium.isTextPresent("Add service"));
            bugId = "NoBug";
            assertTrue(selenium.isTextPresent("2010 World Cup Soccer News"));

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}