public class SUM0110_Update_subscriber_external_id extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = ""; private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testSUM0110_Update_subscriber_external_id() throws Exception {
        try {
            Prep posApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nca doNca = new Nca(selenium);
            Nsa doNsa = new Nsa(selenium);
            Wait waiting = new Wait(selenium);
            long ts = posApplication.generateTimeStamp();

            app = posApplication.launchPOS();
            version = posApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = posApplication.getBrowserAgent();

            myUser.loginTelcoUser();
            doNca.checkForExistingBasketAndDiscard();
            doNca.startNCA("New Convergent Residential Customer");
            doNca.enterIdentificationData(ts);
            doNca.modifyAccountDetails();
            doNca.reviewCustomerData();
            doNca.chooseOffer("DIYe - TV Video Gaming");
            doNca.selectHandSet("");
            doNca.enterSubscriptionDetails(ts);
            doNca.selectOffersForYourSubscriber("DIYe - Countdown extra !");
            String SIM = doNca.selectOneInventory();
            doNca.checkMyBasketContent("DIYe - TV Video Gaming");
            doNca.acceptTermsAndconditions("DIYe - Countdown extra ! Random Countdowns can help you rean Prizes, Wins or free subscriptions.");
            doNca.checkoutReview();
            doNca.checkoutConfirmation(app);
            doNca.waitForSubscriberCreated(SIM);

            selenium.click("migratePre2Post");

            waiting.forTextPresent("Customer Acquisition - Customer Data Review");
            selenium.click("//input[@value='Continue >']");
            waiting.forPageToLoad();

            doNca.chooseOffer("DIY - Triple Choice Device TV Play Offer");
            selenium.click("//input[@value='Continue >']");
            doNca.selectOffersForYourSubscriber("DIY - Your Email Box");
            doNca.selectTwoInventoryOneEmail();
            doNsa.confirmBalanceImpact();
            //doNca.configureBalance("GPRS WAP-INTERNET_limit", "1024");
            doNca.checkMyBasketContent("DIY - Triple Choice Device TV Play Offer");
            doNca.acceptTermsAndconditions("DIY - Triple Choice Device TV Play Offer");
            doNca.checkoutReview();
            doNca.checkoutConfirmation(app);

            doNsa.waitForSubscriberRequestDone();

            assertEquals("Subscriber details", selenium.getTitle());
            bugId = "CBS00119607";
            assertTrue(selenium.isTextPresent("DIY - Triple Choice Device TV Play Offer"));
            bugId = "NoBug";

        result = "pass"; } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}