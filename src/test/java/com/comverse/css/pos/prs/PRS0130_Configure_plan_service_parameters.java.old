            selenium.type("home_zip", "SubZIP1");
            selenium.type("extendedZipCode", "SubExt1");
            selenium.select("home_country", "label=United States");
            selenium.select("home_state", "label=Iowa");
            selenium.type("phoneNumber", "0123456780");
          //  selenium.type("fax", "0623456780");
            //selenium.type("email", "a1@a1.fr");

