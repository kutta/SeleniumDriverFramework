            selenium.click("//form[@id='ppParamsChange']/fieldset[1]/div[1]/input[1]");
            selenium.click("//form[@id='ppParamsChange']/fieldset[1]/div[2]/input[1]");
            selenium.click("//input[@name='continue']");
            waiting.forTextPresent("My Basket");

            selenium.click("checkout");
