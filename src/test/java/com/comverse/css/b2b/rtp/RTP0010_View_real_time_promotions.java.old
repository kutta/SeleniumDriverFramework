package com.comverse.css.b2b.rtp;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2b.Nsa;
import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.CSSSeleneseTestCase;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class RTP0010_View_real_time_promotions extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testRTP0010_View_real_time_promotions() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nsa doNsa = new Nsa(selenium);
            Wait waiting = new Wait(selenium);
            long ts = b2bApplication.generateTimeStamp();

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginB2BAdmin();
            selenium.click("//a[@id='mnu_ACCOUNT']");
            waiting.forPageToLoad();
            doNsa.startNSA("//a[@id='firstYouCanconvergentExistingAccountMenu']");
            selenium.click("//input[@value='Continue >']");
            doNsa.chooseOffer("Business Basic Converged - Postpaid Balances");
            doNsa.selectHandSet("");
            doNsa.enterSubscriptionDetails(ts);
            doNsa.selectOffersForYourSubscriber();
            doNsa.configureOffers();
            selenium.type("Bonus Money_limit", "10");
            selenium.type("Voice M2Long Distance_limit", "20");
            selenium.type("International Roaming_limit", "60");
            selenium.type("GPRS WAP-INTERNET_limit", "1024");
            selenium.type("MMS-ALL_limit", "15");
            selenium.type("SMS-ALL_limit", "100");
            selenium.type("Voice-Anytime_limit", "500");
            selenium.click("//input[@value='Continue >']");
            waiting.forPageToLoad();
            doNsa.checkMyBasketContent("Business Basic Converged - Postpaid Balances");
            doNsa.checkoutReview();
            doNsa.checkoutConfirmation(app);
            //doNsa.waitForSubscriberCreated(SIM);
            doNsa.waitForAccountRequestDone();

            selenium.click("viewBalances");
            waiting.forPageToLoad();

            assertEquals("View Balance", selenium.getTitle());
            selenium.click("youcan_VIEW_ACCUMULATORS");
            waiting.forPageToLoad();

            assertEquals("View Accumulators", selenium.getTitle());
            assertTrue(selenium.isTextPresent("Advantages"));
            assertTrue(selenium.isTextPresent("$10 in usage for the month gives 10 SMS Free"));
            selenium.click("youcan_DEFAULT");
            waiting.forPageToLoad();

            assertEquals("Subscriber details", selenium.getTitle());

            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}