public class SUM0060_Modify_subscriber_contact extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = ""; private String result = "fail";
    

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testSUM0060_Modify_subscriber_contact() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nsa doNsa = new Nsa(selenium);
            Wait waiting = new Wait(selenium);
            Navigation doNav = new Navigation(selenium);
            long ts = b2bApplication.generateTimeStamp();

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginB2BAdmin();

            selenium.click("//a[@id='mnu_ACCOUNT']");
            waiting.forPageToLoad();

            selenium.click("firstYouCanconvergentNewAccountMenu");
            waiting.forPageToLoad();

            selenium.click("//input[@value='Continue >']");
            waiting.forPageToLoad();
            doNsa.modifyAccountDetails("USD");
            doNsa.reviewCustomerData();
            doNsa.chooseOffer("DIY - Monthly Subscription Prime Offering");
            doNsa.selectHandSet("");
            doNsa.enterSubscriptionDetailsNSA(ts, "English", "United States", "Florida");
            doNsa.selectOffersForYourSubscriber();
            doNsa.checkMyBasketContent("DIY - Monthly Subscription Prime Offering");
            doNsa.checkoutReview();
            String ordernumber = doNsa.checkoutConfirmation(app);
            doNsa.waitForAccountOrdersDone(ordernumber);
            doNav.gotoAccountDashboard();
            doNav.SearchSubscriber(ts);

            selenium.click("css=u:contains('Modify')");
            waiting.forPageToLoad();

            assertEquals("Modify Contact Information", selenium.getTitle());
            selenium.type("first_name", "ModFN");
            selenium.type("last_name", "ModLN");
            selenium.type("home_phone", "ModDPhone");
            selenium.type("work_phone", "ModEPhone");
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();

            assertEquals("Modify Contact Information - Confirmation", selenium.getTitle());
            assertTrue(selenium.isTextPresent("ModFN"));
            assertTrue(selenium.isTextPresent("ModLN"));
            assertTrue(selenium.isTextPresent("ModDPhone"));
            assertTrue(selenium.isTextPresent("ModEPhone"));
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();

            assertEquals("Request Submission", selenium.getTitle());
            assertTrue(selenium.isTextPresent("The \"Modify Subscriber Contact\" request has been submitted successfully."));
            selenium.click("//input[@value='OK']");

             waiting.forPageToLoad();

            selenium.click("//div[@id='navigationContext']/table/tbody/tr[1]/td[1]/span[2]/a");

            waiting.forPageToLoad();

            doNsa.waitForSubscriberRequestDone("Modify billing account");

            selenium.click("link=Navigate");

            selenium.click("//td[3]/div/a");
            
      
        result = "pass"; } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}