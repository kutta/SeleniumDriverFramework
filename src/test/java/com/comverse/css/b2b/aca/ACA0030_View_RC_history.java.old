package com.comverse.css.b2b.aca;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2b.Navigation;
import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.CSSSeleneseTestCase;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class ACA0030_View_RC_history extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testACA0030_View_RC_history() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Wait waiting = new Wait(selenium);
            Navigation navigateTo = new Navigation(selenium);

            //PropertyHelper propsHelper = new PropertyHelper();
            //String Invoice = propsHelper.getAccountProperties("Invoice.RC");

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginB2BAdmin();

            selenium.click("mnu_BILLS_PAYMENTS");
            waiting.forPageToLoad();

            assertEquals("View invoices", selenium.getTitle());
            selenium.click("smnu_TRANSACTION_HISTORY");
            waiting.forPageToLoad();

            assertEquals("View transaction history", selenium.getTitle());
            selenium.click("youcan_RC_HISTORY");
            waiting.forPageToLoad();

            assertEquals("View RC history", selenium.getTitle());
            selenium.type("startDate", "01/01/2000");
            selenium.click("//input[@value='Search' and @type='submit']");
            waiting.forPageToLoad();

            assertTrue(selenium.isTextPresent("RC history found"));
            navigateTo.clickFirstRC();
            assertTrue(selenium.isTextPresent("RC term details"));
            assertTrue(selenium.isTextPresent("Impacted Balances"));
            assertTrue(selenium.isTextPresent("Adjustments"));
            selenium.click("//input[@value='Back']");
            waiting.forPageToLoad();

            assertEquals("View RC history", selenium.getTitle());
            selenium.click("//input[@value='Back']");
            waiting.forPageToLoad();

            assertEquals("View transaction history", selenium.getTitle());

            result = "pass";
        } catch (AlreadyRunException e) {
        } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }
}
