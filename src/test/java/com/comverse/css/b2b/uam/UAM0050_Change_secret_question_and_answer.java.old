package com.comverse.css.b2b.uam;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class UAM0050_Change_secret_question_and_answer extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testUAM0050_Change_secret_question_and_answer() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            long ts = b2bApplication.generateTimeStamp();
            String tsAsString = String.valueOf(ts);
            Wait waiting = new Wait(selenium);

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginSeniorAcctManager();
            selenium.click("//a[@id='mnu_TELCO']");
            waiting.forPageToLoad();

            assertEquals("View Hierarchy", selenium.getTitle());
            myUser.createLevelWithLevelType("Level" + tsAsString);
            assertEquals("View Hierarchy", selenium.getTitle());
            selenium.click("link=Level" + tsAsString);
            waiting.forPageToLoad();

            String TempPassword = myUser.createUserWithTempPassword(tsAsString, "Telco CSR Admin");
            myUser.logout();

            myUser.changePassword(tsAsString, TempPassword, "u01234");

            selenium.click("mnu_INFO");
            waiting.forPageToLoad();

            assertEquals("Contact Information", selenium.getTitle());
            selenium.click("smnu_LOGIN");
            waiting.forPageToLoad();

            assertEquals("Login Information", selenium.getTitle());
            selenium.click("youcan_CHANGE_SECRET_QUESTION");
            waiting.forPageToLoad();

            assertEquals("Change secret answer", selenium.getTitle());
            selenium.select("secretQuestionId", "label=What 's your company animal 's name?");
            selenium.type("secretAnswer", "Bastien");
            selenium.type("password_old", "u01234");
            selenium.click("//input[@value='change secret answer']");
            waiting.forPageToLoad();

            assertEquals("Confirm new secret answer", selenium.getTitle());
            assertTrue(selenium.isTextPresent("Bastien"));
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();
            assertEquals("Confirm change", selenium.getTitle());
            assertTrue(selenium.isTextPresent("Your secret answer changed."));
            selenium.click("//input[@value='OK']");
            waiting.forPageToLoad();

            myUser.logout();

            selenium.type("login", tsAsString);
            selenium.click("lnk_FORGOTTEN_PASSWORD");
            waiting.forPageToLoad();

            assertTrue(selenium.isTextPresent("What 's your company animal 's name?"));

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {
        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);
        super.tearDown();
    }

}