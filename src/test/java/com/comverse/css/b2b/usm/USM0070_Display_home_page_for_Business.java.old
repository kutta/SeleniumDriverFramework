package com.comverse.css.b2b.usm;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2b.Nsa;
import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class USM0070_Display_home_page_for_Business extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";
    private static String login_date_time_1 = "";
    private static String login_date_time_2 = "";
    private static String user_name = "";
    private static String pass_word = "";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testUSM0070_Display_home_page_for_Business_CSRAdmin() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nsa doNsa = new Nsa(selenium);
            Wait waiting = new Wait(selenium);
            user_name = "b2buser" + b2bApplication.generateTimeStamp();

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginCSRAdmin();

            String dateText = selenium.getText("//div[@class = 'txt' and contains(.,'For your security, please')]");
            String[] splitedtext = dateText.split(":");
            login_date_time_1 = splitedtext[1] + ":" + splitedtext[2] + ":" + splitedtext[3];

            waiting.forTextPresent("Existing Customer");
            doNsa.manageFirstBusinessAccountFound();

            pass_word = doNsa.createNewBusinessAdmin(user_name);

            assertEquals("View Hierarchy", selenium.getTitle());
            assertTrue(selenium.isTextPresent(user_name));

            myUser.logout();

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    public void testUSM0070_Display_home_page_for_Business_B2BAdmin() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User user = new User(selenium);

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            user.loginB2BAdminWithPasswordChange(user_name.trim(), pass_word.trim());

            //checking whether user name is displayed properly

            assertTrue(selenium.isTextPresent("fn" + user_name));
            assertTrue(selenium.isTextPresent("ln" + user_name));

            //checking the User LOGIN date and time

            String dateText = selenium.getText("//div[@class = 'txt' and contains(.,'For your security, please')]");
            String[] splitedtext = dateText.split(":");
            login_date_time_2 = splitedtext[1] + ":" + splitedtext[2] + ":" + splitedtext[3];
            boolean dateVerification = true;
            if (login_date_time_1.equals(login_date_time_2)) {
                dateVerification = false;
            }
            System.out.println("Start " + login_date_time_1 + "end " + login_date_time_2);
            if (!dateVerification) {
                fail("Login date and time not reflecting");
            } else {
                System.out.println("Login date and time verfication done.");
            }

            //checking the session timeout is displayed
            String sessionText = selenium.getText("//div[@class = 'txt' and contains(.,'Sessions expire after a period')]");
            if (sessionText == null) {
                fail("Session information is not displayed to the customer");
            } else {
                System.out.println("Session information verfication done.");
            }
            System.out.println("Checking navigation bar");
            selenium.click("link=Navigate");
            selenium.click("link=Navigate");

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
