package com.comverse.css.b2b.epm;

import org.junit.After;
import org.junit.Before;

import com.comverse.css.b2b.Nsa;
import com.comverse.css.common.CSSSeleneseTestCase; import com.comverse.css.common.AlreadyRunException;
import com.comverse.css.common.Prep;
import com.comverse.css.common.User;
import com.comverse.css.common.Wait;

public class EPM0040_Modify_employee_contact extends CSSSeleneseTestCase {

    private StringBuffer broken_error = new StringBuffer();
    private String bugId = "NoBug";
    private String app = "";
    private String version = "";
    private String deployMode = "CV";
    private String browser = "";
    private String result = "fail";

    @Before
    @Override
    public void setUp() {
        String htmlFileName = this.getClass().getSimpleName().toString();
        super.setUp(htmlFileName);
    }

    public void testEPM0040_Modify_employee_contact() throws Exception {
        try {
            Prep b2bApplication = new Prep(selenium);
            User myUser = new User(selenium);
            Nsa doNsa = new Nsa(selenium);
            Wait waiting = new Wait(selenium);

            app = b2bApplication.launchB2B();
            version = b2bApplication.getBuildNumber(app, this.getClass().getSimpleName().toString());
            browser = b2bApplication.getBrowserAgent();

            myUser.loginCSRAdmin();

            doNsa.accountSync();

            String login = "biz" + b2bApplication.generateTimeStamp();
            String password = myUser.createBusinessAdminUser(login);

            selenium.isTextPresent("Contact Information");
            assertTrue(selenium.isTextPresent("fn" + login));
            assertTrue(selenium.isTextPresent("ln" + login));

            myUser.logout();
            myUser.loginB2BAdminWithPasswordChange(login, password);

            selenium.click("mnu_INFO");
            selenium.isTextPresent("Contact Information");

            waiting.forTextPresent("All rights reserved");
            assertTrue(selenium.isTextPresent("First Name: fn" + login));
            assertTrue(selenium.isTextPresent("Last Name: ln" + login));

            String newlogin = "biz" + b2bApplication.generateTimeStamp();

            selenium.click("mnu_HIERARCHY");

            selenium.click("link=fn" + login + " ln" + login);

            waiting.forTextPresent("Contact Information");
            selenium.click("youcan_MODIFY_CONTACT");
            waiting.forTextPresent("Change Contact Information ");
            selenium.type("first_name", "fn" + newlogin);

            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Confirm Contact Information");
            selenium.click("//input[@value='OK']");
            waiting.forTextPresent("Modify Contact Information");
            selenium.click("//input[@value='OK']");

            waiting.forTextPresent("Contact Information");
            assertTrue(selenium.isTextPresent("First Name: fn" + newlogin));
            assertTrue(selenium.isTextPresent("Last Name: ln" + login));

            result = "pass";
        } catch (AlreadyRunException e) {         } catch (Exception e) {
            broken_error.append(e.getMessage());
            throw e;
        }
    }

    @After
    @Override
    public void tearDown() {

        //String result = super.testResult(broken_error);
        String testId = this.getClass().getSimpleName().toString();
        super.logResults(bugId, app, version, testId, result, deployMode, browser);

        super.tearDown();
    }
}
